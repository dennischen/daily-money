<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="6">
	   <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
			<TextView android:text="@string/clabel_name" android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" />
			<EditText android:id="@+id/acceditor_name" android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:inputType="text" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" />

			<TextView android:text="@string/clabel_type" android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="5dp" />
			<Spinner android:id="@+id/acceditor_type" android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="20dp" android:layout_marginRight="20dp" />

			<TextView android:text="@string/label_initial_value" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginLeft="5dp" />
	
	        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"  android:layout_weight="1"
                 android:layout_marginLeft="20dp" android:layout_marginRight="20dp">			
			     <EditText android:id="@+id/acceditor_initval" android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:inputType="numberSigned" android:layout_weight="4" />
				 <ImageButton android:id="@+id/acceditor_cal2" android:layout_width="58dp" android:layout_height="48dp"
                    android:src="@drawable/btn_cal2" android:scaleType="centerCrop" android:layout_weight="1" android:paddingLeft="5dp"
                    android:paddingRight="5dp" />
		     </LinearLayout> 
		     
            <CheckBox android:id="@+id/acceditor_cash_account" android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="@string/label_cash_account" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" />
		     
        </LinearLayout>
    </ScrollView>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"  android:layout_weight="1"
		android:layout_marginTop="10dp">
		<Button android:id="@+id/acceditor_ok" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1" android:text="@string/cact_ok"/>
		<Button android:id="@+id/acceditor_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1" android:text="@string/cact_cancel"  android:drawableLeft="@drawable/btn_cancel" />
	    <Button android:id="@+id/acceditor_close" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="@string/cact_close"  android:drawableLeft="@drawable/btn_cancel" android:visibility="gone" />
	</LinearLayout>
</LinearLayout>
